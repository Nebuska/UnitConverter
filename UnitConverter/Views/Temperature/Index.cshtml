@using Models
@model Models.Temperature

@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}

<h2>Temperature Converter</h2>

<form asp-action="Index" method="post">
	<div class="form-group">
		<label asp-for="Unit"></label>
		<select asp-for="Unit" asp-items="Html.GetEnumSelectList<Temperature.TemperatureUnits>()">
			<option value="">Select a unit</option>
		</select>
	</div>
	<div class="form-group">
		<label asp-for="Value"></label>
		<input asp-for="Value" class="form-control" />
	</div>
	<div class="form-group">
		<label ></label>
		<select type="hidden" name="to">
			@foreach(var item in Enum.GetValues(typeof(Temperature.TemperatureUnits)))
			{
				<option value="@item">@item</option>
			}
		</select>
	</div>
	<button type="submit" class="btn btn-primary">Convert</button>
</form>
